@using ObjectInfo
@{
    ViewData["Title"] = "Thông tin chi tiết gói tập";
    Layout = "~/Views/Shared/_Layout.cshtml";

    PackgeInfo _info = ViewBag.PackgeInfo != null ? ViewBag.PackgeInfo : new PackgeInfo();
}
<div class="row">
    @* <form id="formPackgeAdd"> *@
    <div class="card">
        <div class="card-body">
            <div class="group">
                <div class="title-group">
                    <h4 class="card-title ">Thông tin gói tập</h4>
                    <hr>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="flex-report">
                                    <div class="title-report">Tên gói tập:</div>
                                    <div class="field-report">
                                        <input type="text" id="name" placeholder="Tên gói tập" value="@_info.Name" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="flex-report">
                                    <div class="title-report">Giá:</div>
                                    <div class="field-report">
                                        <input type="text" id="price" placeholder="Giá" value="@_info.Price" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="flex-report">
                                    <div class="title-report">Giảm giá (%):</div>
                                    <div class="field-report">
                                        <input type="text" id="discount" value="@(_info.Discount * 100)" disabled>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="flex-report">
                                    <div class="title-report">Mô tả:</div>
                                    <div class="field-report">
                                        <textarea id="description" style="height: 68px !important;" rows="3" disabled>@_info.Description</textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="footer-form">
                        <button type="button" class="btn btn-danger px-5 ml-1" onclick="location.href = '/goi-tap/danh-sach';"><i class="bx bx-bookmark mr-1"></i>Thoát</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
    @* </form> *@
</div>