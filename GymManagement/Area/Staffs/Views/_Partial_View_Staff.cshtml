@using ObjectInfo
@{
    ViewData["Title"] = "Xem chi tiết nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";

    UserInfo _info = ViewBag.StaffInfo != null ? ViewBag.StaffInfo : new UserInfo();
}
<div class="row">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thông tin chi tiết nhân viên</h4>
            <form class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputUsername1">Tên thành viên</label>
                    <input type="text" disabled class="form-control" id="exampleInputUsername1" placeholder="" value="@_info.Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Ngày sinh</label>
                    <input type="text" disabled class="form-control" id="exampleInputUsername1" placeholder="" value="@_info.Birthday.ToString("dd/MM/yyyy")">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect2">Giới tính</label>
                    <input type="text" disabled class="form-control" id="exampleInputUsername1" placeholder="" value="@_info.Sex">
                </div>
                <div class="form-group">
                    <label for="exampleInputConfirmPassword1">Địa chỉ</label>
                    <input type="text" disabled class="form-control" id="exampleInputUsername1" placeholder="" value="@_info.Address">
                </div>
                <div class="form-group">
                    <label for="exampleInputConfirmPassword1">Số điện thoại</label>
                    <input type="text" disabled class="form-control" id="exampleInputUsername1" placeholder="" value="@_info.Phone">
                </div>
                <div class="form-group">
                    <label for="exampleInputConfirmPassword1">Số CMND/CCCD</label>
                    <input type="text" disabled class="form-control" id="exampleInputUsername1" placeholder="" value="@_info.IdentityCard">
                </div>
                <button type="button" class="btn btn-light" onclick="window.location.href = '/nhan-vien/danh-sach';">Quay lại</button>
            </form>
        </div>
    </div>
</div>