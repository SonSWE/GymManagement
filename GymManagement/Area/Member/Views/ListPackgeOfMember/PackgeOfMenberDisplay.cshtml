@using ObjectInfo
@{
    ViewData["Title"] = "Danh sách gói tập của thành viên";
    Layout = "~/Views/Shared/_Layout.cshtml";

    MemberCardInfo _memberCard = ViewBag._memberCard != null ? ViewBag._memberCard : new MemberCardInfo();
}
<div class="row">
    <h4 class="main-title">QUẢN LÝ KHÁCH HÀNG</h4>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row d-flex justify-content-between">
                    <h4 class="card-title">Thông tin khách hàng</h4>
                    <div class="form-group">
                        <button type="button" class="default-btn main-btn" onclick="location.href = '/goi-tap-cua-thanh-vien/mua-goi-tap/@_memberCard.Id'">
                            <img src="/css/image/Plus_32px.png" /> Đăng ký
                        </button>
                    </div>
                </div>
                <div class="box-search">
                    <div class="item-search">
                        <label for="exampleInputUsername1">Tên khách hàng: </label>
                        <input type="text" value="@_memberCard.Name" disabled>
                    </div>

                    <div class="item-search">
                        <label for="exampleInputUsername1">Loại khách hàng: </label>
                        <input type="text" value="@_memberCard.TypeMemberName" disabled>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body" id="tblPackge">
                @Html.Partial("_Partial_List_PackgeOfMember.cshtml")
            </div>
        </div>
    </div>
</div>
<input hidden id="tempMemberCardId" value="@_memberCard.Id" />